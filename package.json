{
    "name": "nextperiod",
    "version": "0.3.3",
    "author": "Harry Mumford-Turner",
    "description": "Tiny utility to give you the next time in a series.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/harrymt/nextperiod.git"
    },
    "main": "./nextperiod",
    "files": [
        "nextperiod.js"
    ],
    "scripts": {
        "precommit": "lint-staged",
        "lint": "eslint",
        "test": "jest --watch --color --coverage",
        "deploy": "npm version patch && git commit -am 'Release' && git push --tags && release && npm publish"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "node": true,
            "es6": true
        },
        "parserOptions": {
            "sourceType": "module"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run lint",
            "prettier --single-quote --write",
            "git add"
        ]
    },
    "license": "MIT",
    "devDependencies": {
        "eslint": "3.19.0",
        "expect.js": "0.3.1",
        "husky": "0.13.4",
        "jest": "22.4.3",
        "lint-staged": "3.4.1",
        "mocha": "3.4.1",
        "prettier": "1.5.3",
        "release": "1.3.2",
        "update": "0.7.4"
    },
    "bugs": {
        "url": "https://github.com/harrymt/nextperiod/issues"
    },
    "homepage": "https://github.com/harrymt/nextperiod#readme",
    "dependencies": {}
}
