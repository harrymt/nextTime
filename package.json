{
  "name": "nextperiod",
  "version": "0.2.0",
  "description": "Tiny utility to give you the next time in a series.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harrymt/nextperiod.git"
  },
  "main": "./index",
  "files": [
    "index.js"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint lib/* bin/*",
    "test": "mocha tests.js",
    "deploy": "npm version minor && npm publish"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "3.19.0",
    "expect.js": "0.3.1",
    "husky": "0.13.4",
    "lint-staged": "3.4.1",
    "mocha": "3.4.1"
  },
  "bugs": {
    "url": "https://github.com/harrymt/nextperiod/issues"
  },
  "homepage": "https://github.com/harrymt/nextperiod#readme",
  "dependencies": {
    "prettier": "1.5.3",
    "update": "0.7.4"
  },
  "author": ""
}
